<%- include("header") -%>
<h1>March Madness Tool</h1>
    <form action="" method="post">
        <label for="team1Input">Team 1:</label>
        <input type="text" id="team1Input" name="team1">
        <label for="team2Input">Team 2:</label>

        <input type="text" id="team2Input" name="team2">
        <button type="submit">Submit</button>
    </form>
    <div id="compare-teams">
        <table>
            <tr>
                <th><%= team1Name %></th>
                <th><%= team2Name %></th>
            </tr>
            <% for (var i = 0; i < team1Stats.length; i ++) { %>
                <tr>
                    <td class="<%= team1Stats[i] > team2Stats[i] ? 'greater-value' : 'lesser-value'%>"><%= team1Stats[i] %> <%= statEndings[i] %></td>
                    <td class="<%= team1Stats[i] < team2Stats[i] ? 'greater-value' : 'lesser-value'%>"><%= team2Stats[i] %> <%= statEndings[i] %></td>
                </tr>
            <% } %>
            
        </table>
    </div>
<%- include("footer") -%>